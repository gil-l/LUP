<?xml version="1.0" encoding="UTF-8"?>
<config>
	<!-- Feature combinations used in the classifier -->
	<features>-u-</features>
	
	<!-- dotProduct, cosineSimilarity -->
	<vectorCalc>dotProduct</vectorCalc>
	
	<!-- number of latent topics -->
	<maxFactors>2,4</maxFactors>
	
	<!-- Standard: 0.01  -->
	<featureInit>0.01</featureInit>
	<!-- Standard: 0.005 -->
	<initialLearningRate>0.005,0.008</initialLearningRate>
	<!-- Standard: 1000 -->
	<annealingRate>1000</annealingRate>
	<!-- Standard: 0.00 -->
	<regularization>0.00</regularization>
	<!-- Standard: 0.0000 -->
	<minImprovement>0.0000</minImprovement>
	<!-- Standard: 10 -->
	<minEpochs>10,12</minEpochs>
	<!-- Standard: 50000 -->
	<maxEpochs>50000</maxEpochs>
</config>